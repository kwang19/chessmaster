<div class="page-header">
  <h1>
    Gameratings
    <a href="/gameratings/new" class="btn btn-lg btn-success">New Gamerating</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "gameratings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :value, "Value" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :value_gteq, :class => "form-control", :placeholder => "Value greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :value_lteq, :class => "form-control", :placeholder => "Value less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :game_pgn_cont, "Game pgn contains" %>
      <%= f.text_field :game_pgn_cont, :class => "form-control", :placeholder => "Game pgn contains" %>
    </div>

<div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/gameratings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#gameratings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Value</th>
        <th>Game</th>
        <th>Actions</th>
      </tr>

      <% @gameratings.each do |gamerating| %>
      <tr>
        <td>
          <% if gamerating.user.present? %>
            <a href="/users/<%= gamerating.user.id %>">
              <%= gamerating.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= gamerating.value %></td>
        <td>
          <% if gamerating.game.present? %>
            <a href="/games/<%= gamerating.game.id %>">
              <%= gamerating.game.pgn %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/gameratings/<%= gamerating.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == gamerating.user %>
            <a href="/gameratings/<%= gamerating.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_gamerating/<%= gamerating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @gameratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
