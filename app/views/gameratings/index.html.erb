<div class="page-header">
  <h1>
    Gameratings
    <a href="/gameratings/new" class="btn btn-lg btn-success">New Gamerating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Value</th>
        <th>Game</th>
        <th>Actions</th>
      </tr>

      <% @gameratings.each do |gamerating| %>
      <tr>
        <td>
          <% if gamerating.user.present? %>
            <a href="/users/<%= gamerating.user.id %>">
              <%= gamerating.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= gamerating.value %></td>
        <td>
          <% if gamerating.game.present? %>
            <a href="/games/<%= gamerating.game.id %>">
              <%= gamerating.game.pgn %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/gameratings/<%= gamerating.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == gamerating.user %>
            <a href="/gameratings/<%= gamerating.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_gamerating/<%= gamerating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @gameratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
