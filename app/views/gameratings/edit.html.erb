<!-- Validation failure messages -->
<% if @gamerating.errors.any? %>
  <% @gamerating.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Gamerating #<%= @gamerating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_gamerating/<%= @gamerating.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @gamerating.user_id %>">
      </div>

      <!-- Label and input for value -->
      <div class="form-group">
        <label for="value" class="control-label">
          Value
        </label>

        <input type="text" id="value" name="value" placeholder="Value" class="form-control" value="<%= @gamerating.value %>">
      </div>

      <!-- Label and input for game_id -->
      <div class="form-group">
        <label for="game_id" class="control-label">
          Game
        </label>

        <input type="text" id="game_id" name="game_id" placeholder="Game" class="form-control" value="<%= @gamerating.game_id %>">
      </div>

      <button class="btn btn-warning">
        Update Gamerating
      </button>
      or
      <a href="/gameratings/<%= @gamerating.id %>">Cancel</a>
    </form>
  </div>
</div>
